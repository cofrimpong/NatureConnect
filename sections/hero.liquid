<section style="padding:48px 20px; background:linear-gradient(180deg,#fff,#eaf4ee);">
  <div style="max-width:1100px;margin:0 auto;display:grid;grid-template-columns:1.2fr .8fr;gap:24px;align-items:center;">
    <div>
      <span style="display:inline-block;padding:6px 12px;border-radius:999px;background:#e7f7e9;color:#1b5e20;font-weight:700;font-size:12px;">
        Campus Wellness • Outdoor Living
      </span>
      <h1 style="margin:12px 0 8px;font-size:40px;font-weight:800;">NatureConnect</h1>
      <p style="font-size:18px;opacity:.9;max-width:52ch;">
        A college-first outdoors brand reconnecting students to nature — powered by Shopify.
      </p>
      <a href="#nc-shop" style="display:inline-block;margin-top:14px;padding:12px 16px;border-radius:12px;background:#2e7d32;color:#fff;text-decoration:none;font-weight:700;">
        Explore Products
      </a>
    </div>
    <div style="position:relative;border:1px solid #e2efe7;border-radius:16px;overflow:hidden;height:320px;background:#fff;">
      {%- assign hero_img = 'hero-campus.jpeg' -%}
      <img src="{{ hero_img | asset_url }}" alt="Campus" style="width:100%;height:100%;object-fit:cover;">
      <span style="position:absolute;left:10px;bottom:10px;background:#fff;border:1px solid #e2efe7;border-radius:999px;padding:6px 10px;font-size:12px;">
        Campus • Parks • Trails
      </span>
    </div>
  </div>
</section>
