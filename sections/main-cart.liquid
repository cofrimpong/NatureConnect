<section style="max-width:1000px;margin:40px auto;padding:0 20px;">
  <h1 style="margin-bottom:20px;">Your Cart</h1>

  {% if cart.item_count == 0 %}
    <p>Your cart is empty.</p>
    <p><a href="/" style="color:#2e7d32;">Continue shopping â†’</a></p>
  {% else %}
    <form action="/cart" method="post" novalidate>
      <table style="width:100%;border-collapse:collapse;">
        <thead>
          <tr style="border-bottom:1px solid #eee;text-align:left;">
            <th style="padding:10px 0;">Product</th>
            <th style="padding:10px 0;">Price</th>
            <th style="padding:10px 0;">Qty</th>
            <th style="padding:10px 0;text-align:right;">Total</th>
          </tr>
        </thead>
        <tbody>
          {% for item in cart.items %}
            <tr style="border-bottom:1px solid #f2f2f2;">
              <td style="padding:12px 0;">
                <a href="{{ item.url }}" style="text-decoration:none;color:inherit;">
                  {% if item.image %}
                    <img src="{{ item.image | img_url: '120x' }}" alt="{{ item.product.title }}" style="width:60px;height:auto;vertical-align:middle;margin-right:10px;border-radius:6px;">
                  {% endif %}
                  {{ item.product.title }}
                  {% if item.variant.title and item.variant.title != 'Default Title' %}
                    <div style="color:#666;font-size:.9rem;">{{ item.variant.title }}</div>
                  {% endif %}
                </a>
              </td>
              <td style="padding:12px 0;">{{ item.final_price | money }}</td>
              <td style="padding:12px 0;">
                <input name="updates[{{ item.key }}]" value="{{ item.quantity }}" type="number" min="0"
                       style="width:70px;padding:6px;border:1px solid #ddd;border-radius:6px;">
              </td>
              <td style="padding:12px 0;text-align:right;">{{ item.final_line_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <div style="display:flex;justify-content:space-between;align-items:center;margin-top:20px;">
        <button name="update" class="btn" style="padding:10px 14px;border:1px solid #ddd;border-radius:8px;background:#fff;cursor:pointer;">
          Update cart
        </button>

        <div style="text-align:right;">
          <div style="font-weight:600;">Subtotal: {{ cart.total_price | money }}</div>
          <button name="checkout" class="btn"
                  style="margin-top:10px;padding:12px 16px;border:none;border-radius:8px;background:#2e7d32;color:#fff;cursor:pointer;">
            Checkout
          </button>
        </div>
      </div>
    </form>
  {% endif %}
</section>

{% schema %}
{
  "name": "Main cart",
  "settings": []
}
{% endschema %}
