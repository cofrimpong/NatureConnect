{% comment %}
  NatureConnect – Featured Collection section
  Shows products from a chosen collection in a simple grid.
{% endcomment %}

<section class="nc-featured-collection" style="padding: 32px 0;">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 style="margin-bottom: 20px;">{{ section.settings.heading }}</h2>
    {% endif %}

    {% assign coll = collections[section.settings.collection] %}
    {% if coll and coll.products_count > 0 %}
      <div class="nc-grid" style="
        display:grid;
        gap:24px;
        grid-template-columns: repeat({{ section.settings.columns }}, minmax(0,1fr));
      ">
        {% for product in coll.products limit: section.settings.product_count %}
          <article>
            <a href="{{ product.url }}" style="display:block; text-decoration:none; color:inherit;">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | img_url: '600x' }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  style="width:100%; height:auto; border-radius: 8px;"
                  loading="lazy">
              {% endif %}
              <h3 style="margin:10px 0 6px; font-size: 1rem;">{{ product.title }}</h3>
              <div style="opacity:.8;">
                {% if product.price_varies %}
                  {{ product.price_min | money }} – {{ product.price_max | money }}
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
    {% else %}
      <p>No products found. Pick a collection in the section settings.</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured collection (NC)",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_count",
      "label": "Product count",
      "min": 1,
      "max": 24,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Featured collection (NC)"
    }
  ]
}
{% endschema %}