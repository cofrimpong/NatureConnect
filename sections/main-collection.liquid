<section class="collection container" style="padding:50px 20px;max-width:1200px;margin:auto;">
  <h1>{{ collection.title }}</h1>
  <p>{{ collection.description }}</p>

  <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:24px;">
    {% for product in collection.products %}
      <div style="border:1px solid #eee;border-radius:10px;padding:10px;">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" style="width:100%;border-radius:10px;">
          <h3 style="margin-top:8px;">{{ product.title }}</h3>
        </a>
        <p>{% render 'card-product', product: product %}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{ "name": "Main collection" }
{% endschema %}
